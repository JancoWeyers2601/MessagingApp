@model MessagingApp.Models.MessageModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Message</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PkTblMessage" />
            <div class="form-group">
                <label asp-for="FkTblConversation" class="control-label"></label>
                <input asp-for="FkTblConversation" class="form-control" />
