            </div>
            <div class="form-group">
                <label asp-for="FkTblUser" class="control-label"></label>
                <input asp-for="FkTblUser" class="form-control" />
                <span asp-validation-for="FkTblUser" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TblMessageHeader" class="control-label"></label>
                <input asp-for="TblMessageHeader" class="form-control" />
                <span asp-validation-for="TblMessageHeader" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TblMessageBody" class="control-label"></label>
                <input asp-for="TblMessageBody" class="form-control" />
                <span asp-validation-for="TblMessageBody" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
