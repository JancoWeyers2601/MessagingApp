@model IEnumerable<MessagingApp.Models.MessageModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FkTblConversation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FkTblUser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TblMessageHeader)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TblMessageBody)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FkTblConversation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FkTblUser)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TblMessageHeader)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TblMessageBody)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PkTblMessage">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PkTblMessage">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PkTblMessage">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
